<?xml version="1.0" encoding="utf-8"?>
<cn.garymb.ygomobile.widget.DonateItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/list_selector"
    android:layout_gravity="center_horizontal"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/donate_method_icon"
        android:layout_width="48dip"
        android:layout_height="30dip"
        android:scaleType="fitStart" 
        android:src="@drawable/alipay" 
        android:contentDescription="@string/app_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/donate_method_des"
        android:text="@string/support_method_alipay_wap"/>
    <RadioButton
        style="@style/RadioButtonAppTheme"
        android:id="@+id/donate_method_radio_button"
        android:layout_width="wrap_content"
        android:clickable="false"
        android:layout_height="wrap_content"/>
</cn.garymb.ygomobile.widget.DonateItem>
